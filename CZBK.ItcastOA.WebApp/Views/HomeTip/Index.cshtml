@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>网站信息</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <style>
        html body {
            width:100%;
            height:100%;
            margin:0px;
            padding:0px;
        }
        .easyui-linkbutton {
            width:90%;
            margin-left:auto;
            margin-right:auto;
        }
    </style>
  
</head>
<body>
    <div id="ycc"  style="width:100%;height:100%;">
        <div id="p" data-options="region:'west'" title="选择项" style="width:100px" >
            <div class="easyui-panel" style="padding:5px;">
                <a href="#" class="easyui-linkbutton" data-options="toggle:true,group:'g2',plain:true,selected:true">小秘书提示</a>
                <a href="#" class="easyui-linkbutton" data-options="toggle:true,group:'g2',plain:true">系统更新</a>
            </div>
        </div>
        <div data-options="region:'center'" title="内容">
            <div style="padding:10px;text-align:left;font-size:18px">
                小秘书助手提醒你:<br />
                在房源搜索中有&nbsp;<b style="color:brown">@ViewBag.XmsCount</b>  条搜索信息有新数据，新数据一共&nbsp;<b style="color:brown">@ViewBag.ListC</b>  条;
            </div>
            
        </div>
    </div>
</body>

</html>
@section scripts{
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/MyAjaxForm.js"></script>
    <script src="~/Scripts/MyNewJS.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--参考signalr  脚本自动生成 -->
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(function(){
            $('#ycc').layout();

            setHeight();
        })
        function setHeight() {

            var height = $(document).height() -2;
            $("#ycc").attr("style", "width:100%;height:" + height + "px");
            $("#ycc").layout("resize", {
                width: "100%",
                height: height + "px"
            });

        }
    </script>
}